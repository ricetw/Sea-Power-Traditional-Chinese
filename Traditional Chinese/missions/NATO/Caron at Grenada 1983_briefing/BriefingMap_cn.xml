<Viewbox Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:SeapowerUI">
	<Canvas Width="1095" Height="662">
        <Image Source="{Binding Assets[Grenada_Close]}"/>
		<!-- Small Map -->
        <Border Canvas.Right="10" Canvas.Top="10" BorderThickness="5" BorderBrush="White">
            <Grid>
                <Image Stretch="Uniform" Source="{Binding Assets[AtlanticFar]}" Width="250"/>
                <Border BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="30" Height="20" Margin="45,0,0,30" BorderBrush="{StaticResource Brush.Border.FocusAccent}"/>
            </Grid>
        </Border>

		<!-- Map Labels -->
		<TextBlock Foreground="SteelBlue" Text="大西洋" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Canvas.Left="890" Canvas.Top="500"/>
		<TextBlock Foreground="Black" Text="格瑞那達" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Canvas.Left="530" Canvas.Top="250"/>
		<TextBlock Foreground="SteelBlue" Text="加勒比海" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Canvas.Left="100" Canvas.Top="300"/>


		<!-- USS Caron DD-970 -->
		<StackPanel Orientation="Vertical" Canvas.Left="350" Canvas.Top="575">
			<TextBlock Foreground="Blue" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
                <Run Text="卡隆號驅逐艦 USS Caron DD-970"/>
            </TextBlock>
			<Canvas Width="22.5" Height="22.5" HorizontalAlignment="Center">
                <Path StrokeThickness="{DynamicResource ContactIconThickness}" Stroke="{StaticResource NTDS.FriendColour}" Data="{StaticResource NTDS.Allied.Surface}"/>
                <Ellipse Canvas.Left="10" Canvas.Top="10" Width="3" Height="3" StrokeThickness="1.325" Stroke="{StaticResource NTDS.FriendColour}"/>
            </Canvas>
        </StackPanel>
		
		<!-- USS Moosbrugger DD-980 -->
		<StackPanel Orientation="Vertical" Canvas.Left="700" Canvas.Top="500">
			<TextBlock Foreground="Blue" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
                <Run Text="莫斯布魯格號驅逐艦 USS Moosbrugger DD-980"/><LineBreak/>
                <Run Text="(獨立作戰)"/>				
            </TextBlock>
			<Canvas Width="22.5" Height="22.5" HorizontalAlignment="Center">
                <Path StrokeThickness="{DynamicResource ContactIconThickness}" Stroke="{StaticResource NTDS.FriendColour}" Data="{StaticResource NTDS.Allied.Surface}"/>
                <Ellipse Canvas.Left="10" Canvas.Top="10" Width="3" Height="3" StrokeThickness="1.325" Stroke="{StaticResource NTDS.FriendColour}"/>
            </Canvas>
        </StackPanel>
		
		<!-- AH-1T HMLA-269 'Gunrunners' -->
		<StackPanel Orientation="Vertical" Canvas.Left="450" Canvas.Top="600">
			<TextBlock Foreground="Blue" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
                <Run Text="AH-1T 攻擊直升機中隊『Gunrunners』（HMLA-269）"/>
            </TextBlock>
			<Canvas Width="22.5" Height="22.5" HorizontalAlignment="Center">
                <Path StrokeThickness="{DynamicResource ContactIconThickness}" Stroke="{StaticResource NTDS.FriendColour}" Data="{StaticResource NTDS.Allied.Helicopter}"/>
                <Ellipse Canvas.Left="10" Canvas.Top="10" Width="3" Height="3" StrokeThickness="1.325" Stroke="{StaticResource NTDS.FriendColour}"/>
            </Canvas>
        </StackPanel>
		
		<!-- SH-3H HS-9 'Sea Griffins' CSAR -->
		<StackPanel Orientation="Vertical" Canvas.Left="650" Canvas.Top="400">
			<TextBlock Foreground="Blue" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
                <Run Text="SH-3H 搜救直升機中隊『Sea Griffins』（HS-9）"/>
            </TextBlock>
			<Canvas Width="22.5" Height="22.5" HorizontalAlignment="Center">
                <Path StrokeThickness="{DynamicResource ContactIconThickness}" Stroke="{StaticResource NTDS.FriendColour}" Data="{StaticResource NTDS.Allied.Helicopter}"/>
                <Ellipse Canvas.Left="10" Canvas.Top="10" Width="3" Height="3" StrokeThickness="1.325" Stroke="{StaticResource NTDS.FriendColour}"/>
            </Canvas>
        </StackPanel>
		
		<!-- 2 x A-7E VA-15 'Valions' -->
		<StackPanel Orientation="Vertical" Canvas.Left="150" Canvas.Top="200">
			<TextBlock Foreground="Blue" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
                <Run Text="VA-15 A-7E『Valions』中隊(2架)"/>
            </TextBlock>
			<Canvas Width="22.5" Height="22.5" HorizontalAlignment="Center">
                <Path StrokeThickness="{DynamicResource ContactIconThickness}" Stroke="{StaticResource NTDS.FriendColour}" Data="{StaticResource NTDS.Allied.Air}"/>
                <Ellipse Canvas.Left="10" Canvas.Top="10" Width="3" Height="3" StrokeThickness="1.325" Stroke="{StaticResource NTDS.FriendColour}"/>
            </Canvas>
        </StackPanel>
		
		<!-- Point Salines Airport -->
		<StackPanel Orientation="Vertical" Canvas.Left="350" Canvas.Top="475">
			<TextBlock Foreground="{StaticResource NTDS.NeutralColour}" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
                <Run Text="薩林斯機場 (Point Salines Airport)"/>
            </TextBlock>
			<Canvas Width="22.5" Height="22.5" HorizontalAlignment="Center">
                <Path StrokeThickness="{DynamicResource ContactIconThickness}" Stroke="{StaticResource NTDS.NeutralColour}" Data="{StaticResource NTDS.Neutral.Airbase}"/>
                <Ellipse Canvas.Left="10" Canvas.Top="10" Width="3" Height="3" StrokeThickness="1.325" Stroke="{StaticResource NTDS.NeutralColour}"/>
            </Canvas>
        </StackPanel>
		
		<!-- Governor-General's Mansion -->
		<StackPanel Orientation="Vertical" Canvas.Left="360" Canvas.Top="375">
			<TextBlock Foreground="{StaticResource NTDS.NeutralColour}" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
                <Run Text="總督官邸 (Governor-General's Mansion)"/>
            </TextBlock>
			<Canvas Width="22.5" Height="22.5" HorizontalAlignment="Center">
                <Path StrokeThickness="{DynamicResource ContactIconThickness}" Stroke="{StaticResource NTDS.NeutralColour}" Data="{StaticResource NTDS.Neutral.Airbase}"/>
                <Ellipse Canvas.Left="10" Canvas.Top="10" Width="3" Height="3" StrokeThickness="1.325" Stroke="{StaticResource NTDS.NeutralColour}"/>
            </Canvas>
        </StackPanel>
		
		<!-- Fort Frederick (PRA) -->
		<StackPanel Orientation="Vertical" Canvas.Left="400" Canvas.Top="420">
			<TextBlock Foreground="{StaticResource NTDS.HostileColour}" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
                <Run Text="佛雷德里克要塞 (Fort Frederick, PRA)"/>
            </TextBlock>
			<Canvas Width="22.5" Height="22.5" HorizontalAlignment="Center">
                <Path StrokeThickness="{DynamicResource ContactIconThickness}" Stroke="{StaticResource NTDS.HostileColour}" Data="{StaticResource NTDS.Enemy.Installation}"/>
                <Ellipse Canvas.Left="10" Canvas.Top="10" Width="3" Height="3" StrokeThickness="1.325" Stroke="{StaticResource NTDS.HostileColour}"/>
            </Canvas>
        </StackPanel>
		
		<!-- Radio Free Grenada (PRA) -->
		<StackPanel Orientation="Vertical" Canvas.Left="375" Canvas.Top="325">
			<TextBlock Foreground="{StaticResource NTDS.HostileColour}" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
                <Run Text="自由格瑞那達電台 (Radio Free Grenada, PRA)"/>
            </TextBlock>
			<Canvas Width="22.5" Height="22.5" HorizontalAlignment="Center">
                <Path StrokeThickness="{DynamicResource ContactIconThickness}" Stroke="{StaticResource NTDS.HostileColour}" Data="{StaticResource NTDS.Enemy.Radar}"/>
                <Ellipse Canvas.Left="10" Canvas.Top="10" Width="3" Height="3" StrokeThickness="1.325" Stroke="{StaticResource NTDS.HostileColour}"/>
            </Canvas>
        </StackPanel>

		<!-- Arrows -->
		<!-- Tool for making paths: https://yqnn.github.io/svg-path-editor/ -->
        <Path Canvas.Left="300" Canvas.Top="300" Data="M 0 -7 L 10 10 L 4 10 L 4 60 L -4 60 L -4 10 L -10 10 Z" Fill="{StaticResource NTDS.FriendColour}">
            <Path.RenderTransform>
                <RotateTransform Angle="130"/>
            </Path.RenderTransform>
        </Path>
		
		<Path Canvas.Left="300" Canvas.Top="515" Data="M 0 -7 L 10 10 L 4 10 L 4 60 L -4 60 L -4 10 L -10 10 Z" Fill="{StaticResource NTDS.FriendColour}">
            <Path.RenderTransform>
                <RotateTransform Angle="310"/>
            </Path.RenderTransform>
        </Path>
	</Canvas>
</Viewbox>